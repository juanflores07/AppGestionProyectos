@model AppGestionProyectos.Models.EditarTarea

@{
    ViewBag.Title = "EditarTarea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Editar Tarea</h2>

<br />

<style>
    .control-label {
        font-weight: bold;
        color: #333;
    }

    /* Estilos para los campos de texto */
    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-top: 5px;
    }
</style>

<h2>Editar Tarea</h2>

<br />

@using (Html.BeginForm("EditarTarea", "Creacion", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.id, "ID de la tarea")
        <br />

        @Html.TextBoxFor(model => model.id)
    </div>

    <br />

    <div class="form-group">
        @Html.LabelFor(model => model.nuevaDescripcion, "Nueva Descripcion")
        <br />

        @Html.TextBoxFor(model => model.nuevaDescripcion)
    </div>
    <br />

    <div class="form-group">
        @Html.LabelFor(model => model.nuevaFechaInicio, "Nueva Fecha Inicio")
        <br />

        @Html.TextBoxFor(model => model.nuevaFechaInicio, new { type = "date" })
    </div>

    <br />
    <div class="form-group">
        @Html.LabelFor(model => model.nuevaFechaVencimiento, "Nueva Fecha Vencimiento")
        <br />

        @Html.TextBoxFor(model => model.nuevaFechaVencimiento, new { type = "date" })
    </div>
    <br />

    <div class="form-group">
        @Html.LabelFor(model => model.nuevoCreador, "Nuevo Supervisor (Numero del 1 al 4 segun usuario)")
        <br />

        @Html.TextBoxFor(model => model.nuevoCreador)
    </div>
    <br />

    <div class="form-group">
        @Html.LabelFor(model => model.nuevoComentario, "Nuevo Comentario")
        <br />

        @Html.TextBoxFor(model => model.nuevoComentario)
    </div>
    <br />

    <br />
}

<input type="submit" value="Guardar cambios" class="btn btn-primary" />
<a href="@Url.Action("ListaTareas", "Creacion")" class="btn btn-primary">Cancelar</a>

@if (!string.IsNullOrEmpty(TempData["MensajeEdicion"] as string))
{
    <div class="alert alert-danger">@TempData["MensajeEdicion"]</div>
}

