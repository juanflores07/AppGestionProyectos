@{
    string rolLog = ViewBag.RolLog as string;
}

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    html,
    body {
        height: 100%;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>


<div class="container" style="height: 100vh; display: flex; align-items: center; justify-content: center;">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 style="margin-top: 0; color: black;">Espacio de gestión de Tareas</h2>
        </div>
        <div class="col-md-12 text-center" style="margin-top: 20px;">
            <div class="row justify-content-center">
                <div class="col-md-3">
                    <a href="@Url.Action("CrearTarea", "Creacion")" class="btn btn-primary btn-block">Crear Tarea</a>
                </div>
                <div class="col-md-3">
                    <a href="@Url.Action("ListaTareas", "Creacion")" class="btn btn-primary btn-block">Registro de Tareas</a>
                </div>
                <div class="col-md-3">
                    <a href="@Url.Action("SeguimientoTareas", "Creacion")" class="btn btn-primary btn-block">Seguimiento de Tareas</a>
                </div>
                <div class="col-md-3">
                    <a href="@Url.Action("CerrarSesion", "Creacion")" class="btn btn-primary btn-block">Cerrar sesión</a>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["MensajeExitoCreacion"] != null)
{
    <div class="alert alert-success">@TempData["MensajeExitoCreacion"]</div>
}














